# APPLICATION CONFIGURATION
APP_NAME=NestJS Backend
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
GLOBAL_PREFIX=api
CORS_ENABLED=true
CORS_ORIGINS=https://your-frontend.example.com
APP_TIMEZONE=Asia/Ho_Chi_Minh

# DATABASE CONFIGURATION
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=nestjs
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false
DB_CHARSET=utf8mb4
DB_TIMEZONE=+07:00

# DATABASE CONNECTION POOL
DB_CONNECTION_LIMIT=50

# JWT CONFIGURATION
JWT_SECRET="SECRET-BACKEND-V1"
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET="REFRESH-SECRET-BACKEND-V1"
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=nestjs-backend
JWT_AUDIENCE=nestjs-frontend

# MAIL CONFIGURATION (Optional)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_NAME=Backend
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_TEMPLATE_DIR=./templates
MAIL_TEMPLATE_ADAPTER=handlebars

# FILE UPLOAD / STORAGE CONFIGURATION
# Storage type: local or s3
STORAGE_TYPE=local
# Max file size in bytes (default: 10485760 = 10MB, min: 1KB, max: 100MB)
STORAGE_MAX_FILE_SIZE=10485760

# Local Storage Configuration
STORAGE_LOCAL_DESTINATION=./storage/uploads
STORAGE_LOCAL_BASE_URL=/uploads

# AWS S3 Configuration (Required if STORAGE_TYPE=s3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BASE_URL=

# RBAC CACHE CONFIGURATION
RBAC_CACHE_TTL=300

# SECURITY CONFIGURATION
SECURITY_ATTEMPT_MAX=5
SECURITY_ATTEMPT_LOCKOUT_SECONDS=1800
SECURITY_ATTEMPT_WINDOW_SECONDS=900

# REDIS CONFIGURATION (Optional)
REDIS_URL=